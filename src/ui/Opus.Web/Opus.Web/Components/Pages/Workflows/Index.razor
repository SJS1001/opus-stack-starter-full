@page "/workflows"
@using Opus.Web.Models
@using Opus.Web.Services
@inject ApiService ApiService

<PageTitle>Workflows</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Workflows</h1>
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-play-circle"></i> Start Workflow
            </button>
            <ul class="dropdown-menu">
                <li><button class="dropdown-item" type="button" @onclick='() => StartWorkflow("data-processing")'>Data Processing</button></li>
                <li><button class="dropdown-item" type="button" @onclick='() => StartWorkflow("report-generation")'>Report Generation</button></li>
                <li><button class="dropdown-item" type="button" @onclick='() => StartWorkflow("data-validation")'>Data Validation</button></li>
            </ul>
        </div>
    </div>

    <ErrorAlert ErrorMessage="@errorMessage" OnDismiss="() => errorMessage = null" />

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    <!-- Status Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Running</h5>
                    <h2>@runningCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Completed</h5>
                    <h2>@completedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <h5 class="card-title text-danger">Failed</h5>
                    <h2>@failedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Pending</h5>
                    <h2>@pendingCount</h2>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingSpinner Message="Loading workflows..." />
    }
    else if (workflowsResult != null)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Instance ID</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Started At</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var workflow in workflowsResult.Items)
                            {
                                <tr>
                                    <td><code>@workflow.InstanceId[..8]...</code></td>
                                    <td>
                                        <span class="badge bg-secondary">@workflow.Type</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = workflow.Status switch
                                            {
                                                "Running" => "bg-primary",
                                                "Completed" => "bg-success",
                                                "Failed" => "bg-danger",
                                                "Pending" => "bg-warning",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">
                                            @if (workflow.Status == "Running")
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                            }
                                            @workflow.Status
                                        </span>
                                    </td>
                                    <td>@workflow.StartedAt.ToString("g")</td>
                                    <td>@GetDuration(workflow.StartedAt)</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewWorkflowDetails(workflow.InstanceId)">
                                            <i class="bi bi-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <Pagination T="WorkflowInstance" Result="workflowsResult" PageChanged="LoadWorkflows" />
            </div>
        </div>
    }

    @if (showDetailsModal && selectedWorkflow != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Workflow Details</h5>
                        <button type="button" class="btn-close" @onclick="CloseDetailsModal"></button>
                    </div>
                    <div class="modal-body">
                        <dl class="row">
                            <dt class="col-sm-3">Instance ID</dt>
                            <dd class="col-sm-9"><code>@selectedWorkflow.InstanceId</code></dd>

                            <dt class="col-sm-3">Type</dt>
                            <dd class="col-sm-9">@selectedWorkflow.Type</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                <span class="badge @GetStatusBadgeClass(selectedWorkflow.Status)">
                                    @selectedWorkflow.Status
                                </span>
                            </dd>

                            <dt class="col-sm-3">Started At</dt>
                            <dd class="col-sm-9">@selectedWorkflow.StartedAt.ToString("F")</dd>

                            <dt class="col-sm-3">Duration</dt>
                            <dd class="col-sm-9">@GetDuration(selectedWorkflow.StartedAt)</dd>
                        </dl>

                        <hr />

                        <h6>Execution Steps</h6>
                        <div class="timeline mt-3">
                            @{
                                var steps = GenerateMockSteps(selectedWorkflow);
                            }
                            @foreach (var step in steps)
                            {
                                <div class="timeline-item mb-3">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3">
                                            <i class="bi @step.Icon fs-4 @step.IconClass"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">@step.Name</h6>
                                            <p class="text-muted mb-0">@step.Description</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private PagedResult<WorkflowInstance>? workflowsResult;
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    private bool showDetailsModal = false;
    private WorkflowInstance? selectedWorkflow;

    private int runningCount = 0;
    private int completedCount = 0;
    private int failedCount = 0;
    private int pendingCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadWorkflows(1);
    }

    private async Task LoadWorkflows(int page)
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            workflowsResult = await ApiService.GetWorkflowsAsync(page, 10);

            if (workflowsResult != null)
            {
                runningCount = workflowsResult.Items.Count(w => w.Status == "Running");
                completedCount = workflowsResult.Items.Count(w => w.Status == "Completed");
                failedCount = workflowsResult.Items.Count(w => w.Status == "Failed");
                pendingCount = workflowsResult.Items.Count(w => w.Status == "Pending");
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task StartWorkflow(string type)
    {
        try
        {
            errorMessage = null;
            var workflow = await ApiService.StartWorkflowAsync(type);
            successMessage = $"Started {type} workflow (ID: {workflow.InstanceId[..8]}...)";
            await LoadWorkflows(1);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private void ViewWorkflowDetails(string instanceId)
    {
        selectedWorkflow = workflowsResult?.Items.FirstOrDefault(w => w.InstanceId == instanceId);
        showDetailsModal = true;
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        selectedWorkflow = null;
    }

    private string GetDuration(DateTime startedAt)
    {
        var duration = DateTime.UtcNow - startedAt;
        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}h {duration.Minutes}m";
        if (duration.TotalMinutes >= 1)
            return $"{(int)duration.TotalMinutes}m {duration.Seconds}s";
        return $"{(int)duration.TotalSeconds}s";
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Running" => "bg-primary",
        "Completed" => "bg-success",
        "Failed" => "bg-danger",
        "Pending" => "bg-warning",
        _ => "bg-secondary"
    };

    private List<WorkflowStep> GenerateMockSteps(WorkflowInstance workflow)
    {
        var steps = new List<WorkflowStep>
        {
            new() { Name = "Initialize", Description = "Workflow initialized", Icon = "bi-check-circle-fill", IconClass = "text-success" },
            new() { Name = "Load Data", Description = "Data loaded successfully", Icon = "bi-check-circle-fill", IconClass = "text-success" },
            new() { Name = "Process", Description = workflow.Status == "Running" ? "Processing..." : "Processing completed", Icon = workflow.Status == "Running" ? "bi-arrow-clockwise" : "bi-check-circle-fill", IconClass = workflow.Status == "Running" ? "text-primary" : "text-success" }
        };

        if (workflow.Status == "Completed")
        {
            steps.Add(new() { Name = "Complete", Description = "Workflow completed successfully", Icon = "bi-check-circle-fill", IconClass = "text-success" });
        }
        else if (workflow.Status == "Failed")
        {
            steps.Add(new() { Name = "Error", Description = "Workflow encountered an error", Icon = "bi-x-circle-fill", IconClass = "text-danger" });
        }

        return steps;
    }

    private class WorkflowStep
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Icon { get; set; } = string.Empty;
        public string IconClass { get; set; } = string.Empty;
    }
}
